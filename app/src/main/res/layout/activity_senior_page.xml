<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Senior_page">

    <ImageButton
        android:id="@+id/Excerciseimage"
        android:layout_width="166dp"
        android:layout_height="176dp"
        android:layout_gravity="left"
        android:layout_marginStart="28dp"
        android:layout_marginTop="72dp"
        android:onClick="exerciseclick"
        android:src="@drawable/excersiceimage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exercise"
        android:layout_width="184dp"
        android:layout_height="141dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:onClick="exerciseclick"
        android:text="Exercise \n with Jason Franz \n from 7:00am - 8:00am \n click to join"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/excersiceimage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/mentalhealth"
        android:layout_width="172dp"
        android:layout_height="141dp"
        android:layout_gravity="left"
        android:layout_marginStart="28dp"
        android:onClick="seniormentalhealthclick"
        android:src="@drawable/mentalhealthimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="297dp" />

    <TextView
        android:id="@+id/seniormentalhealth"
        android:layout_width="184dp"
        android:layout_height="141dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:onClick="seniormentalhealthclick"
        android:text="Mental Health Talks \n with Andrea Palok \n from 2:00pm - 3:00pm \n click to join"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/talentimage"
        tools:layout_editor_absoluteY="297dp" />

    <ImageButton
        android:id="@+id/teaimage"
        android:layout_width="172dp"
        android:layout_height="141dp"
        android:layout_gravity="left"
        android:layout_marginStart="28dp"
        android:onClick="teaclick"
        android:src="@drawable/teaimage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/paint"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mentalhealth" />

    <TextView
        android:id="@+id/paint"
        android:layout_width="184dp"
        android:layout_height="141dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:onClick="paintclick"
        android:text="Tea with Peers \n with Ashley Tran \n from 6:00pm - 7:00pm \n click to join"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seniormentalhealth" />


</androidx.constraintlayout.widget.ConstraintLayout>